{
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "src",
    "paths": {
      "@bots/*": [
        "infrastructure/bots/*"
      ],
      "@builders/*": [
        "infrastructure/builders/*"
      ],
      "@commands/*": [
        "infrastructure/commands/*"
      ],
      "@interfaces/*": [
        "domain/interfaces/*"
      ],
      "@enums/*": [
        "domain/enums/*"
      ],
      "@interfaces/*": [
        "domain/interfaces/*"
      ],
      "@schemas/*": [
        "domain/schemas/*"
      ],
      "@t/*": [
        "domain/types/*"
      ],
      "@utils/*": [
        "domain/utils/*"
      ]
    }
  },
  "files": [
    "src/main.ts"
  ],
  "include": [
    "src/**/*.ts",
    "environment.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".idea",
    ".vscode"
  ]
}
